<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape>
            <solid android:color="#58574C" ></solid>
            <corners android:radius="@dimen/radioboton"></corners>

        </shape>
    </item>


    <item android:state_enabled="false" >
        <shape>

            <solid android:color="#8B8871" ></solid>
            <corners android:radius="@dimen/radioboton"></corners>

        </shape>
    </item>




    <item>
        <shape>
            <gradient android:startColor="#8B8871"
                android:endColor="#58574C"
                android:angle="90"
                ></gradient>
            <corners android:radius="@dimen/radioboton"></corners>


        </shape>

    </item>

</selector>